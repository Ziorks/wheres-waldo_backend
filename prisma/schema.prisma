generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Image {
  id                    Int         @id @default(autoincrement())
  src                   String
  width                 Int
  height                Int
  characters            Character[]
  games                 Game[]
  percentGuessTolerance Vector2d    @relation(fields: [vector2dId], references: [id], onDelete: Restrict)
  vector2dId            Int
}

model Character {
  id         Int         @id @default(autoincrement())
  name       String
  avatar     String
  objectives Objective[]
  location   Vector2d    @relation(fields: [vector2dId], references: [id])
  vector2dId Int
  image      Image       @relation(fields: [imageId], references: [id], onDelete: Cascade)
  imageId    Int
}

model Vector2d {
  id         Int         @id @default(autoincrement())
  x          Int
  y          Int
  images     Image[]
  characters Character[]
}

model Game {
  id         Int         @id @default(autoincrement())
  startTime  DateTime?
  endTime    DateTime?
  nGuesses   Int         @default(0)
  playerName String?
  image      Image       @relation(fields: [imageId], references: [id], onDelete: Restrict)
  imageId    Int
  objectives Objective[]
}

model Objective {
  found       Boolean   @default(false)
  character   Character @relation(fields: [characterId], references: [id], onDelete: Restrict)
  characterId Int
  game        Game      @relation(fields: [gameId], references: [id], onDelete: Cascade)
  gameId      Int

  @@id([characterId, gameId])
}
